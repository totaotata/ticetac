    />
    <link rel="stylesheet" href="/stylesheets/style.css" />

  </head>

  <body>

    <h1><%= title %></h1>

    <div class="container d-flex justify-content-center">
      <div id="result">
        <% if (historyIsEmpty == false) { %>
        
        <% for (let i = 0; i < history.journeys.length; i++) { %>
        <ul>
          <li class="coord">
            <div class="card">
              <div class="card-body">
                <ul id="infos">
                  <li id="date">
                    <b><%= history.journeys[i].date %></b>
                  </li>
                  <li id="trajet">
                    <b><%= history.journeys[i].departure %>/<%= history.journeys[i].arrival %></b>
                  </li>
                  <li id="departureTime">
                    train departure at : <%= history.journeys[i].departureTime %> pm
                  </li>
                  <li id="price">
                    <b><%= history.journeys[i].price %> â‚¬</b>
                    <button type="button" class="btn btn-danger">OK</button>
                  </li>
                </ul>
              </div>
            </div>
          </li>
        </ul>
        <% if (historyisEmpty == true) { %>
        <h1> No trips recorded yet!</h1>
        <br />
        <a href="/#"
          ><button type="button" class="btn btn-danger">confirm</button></a
        >
        <% } %>
      </div>
    </div>

  <!-- script -->
